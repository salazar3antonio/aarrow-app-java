            />

        <TextView
            android:id="@+id/catches_quest"
            style="@style/Question"
            android:text="@string/catches_qtext"
            />

        <RadioGroup
            android:id="@+id/catches_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/catc_rb5"
