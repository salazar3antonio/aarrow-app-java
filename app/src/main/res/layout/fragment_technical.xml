                android:text="@string/powr_tx3"
                />

            <RadioButton
                android:id="@+id/powr_rb2"
                style="@style/RadioButton"
                android:text="@string/powr_tx2"
                />

            <RadioButton
                android:id="@+id/powr_rb1"
                style="@style/RadioButton"
                android:checked="true"
                android:text="@string/powr_tx1"
                />

        </RadioGroup>

        <View
            style="@style/Divider"
