            style="@style/Title"
            android:text="@string/freezes"
            />

        <TextView
            android:id="@+id/freezes_quest"
            style="@style/Question"
            android:text="@string/freezes_qtext"
            />

        <RadioGroup
            android:id="@+id/freezes_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/free_rb5"
                style="@style/RadioButton"
                android:text="@string/free_tx5"
                />

            <RadioButton
