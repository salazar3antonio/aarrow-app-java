<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/list_item_spinner_name"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Spinner Name"/>

            <TextView
                android:id="@+id/list_item_audit_date"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_spinner_name"
                android:layout_marginLeft="16dp"
                android:text="Date of Audit"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/list_item_score_caption"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/list_item_spinner_name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Score"
                android:textColor="@color/secondary_text"/>

            <ImageView
                android:id="@+id/photoChecker_thumb"
                android:layout_below="@+id/list_item_audit_date"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:src="@color/divider"
                />

            <TextView
                android:id="@+id/list_item_audit_photoSignedView"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoChecker_thumb"
                android:layout_marginLeft="16dp"
                android:text="Photo Sign Checker"
                android:layout_marginTop="2dp"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/list_item_audit_score"
                style="@style/AuditScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/list_item_spinner_name"
                android:gravity="right"
                android:text="Audit Score"
                android:textStyle="bold"
                android:textSize="24sp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_item_audit_date"
                android:layout_marginRight="8dp"
                android:layout_marginTop="54dp"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/list_edit_button"
                    style="@style/Button_Borderless"
                    android:src="@drawable/ic_edit_black_24dp"/>

                <ImageButton
                    android:id="@+id/list_share_button"
                    style="@style/Button_Borderless"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/ic_share_black_24dp"
                    />

                <ImageButton
                    android:id="@+id/list_archive_button"
                    style="@style/Button_Borderless"
                    android:src="@drawable/ic_archive_black_24dp"
                    />

            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>